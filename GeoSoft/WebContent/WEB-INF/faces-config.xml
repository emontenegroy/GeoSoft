<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
    version="1.2">

	<!-- Manejo de Managed Beans -->
	<managed-bean>
		<managed-bean-name>localeMBean</managed-bean-name>
		<managed-bean-class>com.geosoft.mbeans.LocaleMBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>mapaMBean</managed-bean-name>
		<managed-bean-class>com.geosoft.mbeans.MapaMBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>usuarioMBean</managed-bean-name>
		<managed-bean-class>com.geosoft.mbeans.UsuarioMBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<!-- Manejo de Navegacion -->
	<!-- Login -->
	<navigation-rule>
		<from-view-id>/index.jsp</from-view-id>
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>/pages/home.jsp</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	<!-- Pagina Principal -->
	<navigation-rule>
		<from-view-id>/pages/home.jsp</from-view-id>
		<navigation-case>
			<from-outcome>logout</from-outcome>
			<to-view-id>/index.jsp</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	
</faces-config>
